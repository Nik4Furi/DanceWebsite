extends base.pug 

block style 
 style
   include ../static/style.css
   include ../static/contact.css

block content
 
  h2 Contact Us
  form(action="/contact", method="post" class="myform") 
   input(type="text", name="name" class="myInput" placeholder="Enter your name")
   input(type="phone", name="phone" class="myInput" placeholder="Enter your phone")
   input(type="email", name="email" class="myInput" placeholder="Enter your email")
   textarea(name="address", cols="30", rows="10", class="myInput", placeholder="Enter your address")
   textarea(name="more", cols="30", rows="10", placeholder="Eilaborate your concern", class="myInput" )
   button.btn Submit